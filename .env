#!/usr/bin/env bash

# if it's sourced by MakeFile
if [ `dirname $0` = "/bin" ] 
	then       ROOT="./"
	else local ROOT=`dirname $0`
fi

export DJANGO_SETTINGS_MODULE="app.settings"
export PYTHONPATH="${PYTHONPATH}:${ROOT}/lib/:${ROOT}/app/"

# load .env_dev if exists
if [ -f "${ROOT}/.env_dev" ]
	then . "${ROOT}/.env_dev"
fi

. "${ROOT}/venv/bin/activate"

# EOF
